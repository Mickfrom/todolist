# Server Configuration for Combined Deployment
# Copy this file to .env and fill in your own values

# Environment
NODE_ENV=development

# JWT Secret - CHANGE THIS! Use a random string (minimum 32 characters)
# Generate one at: https://randomkeygen.com/
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# Database Path
DATABASE_PATH=./database/todolist.db

# Server Port
PORT=5000

# Client URL (optional for development, not needed in combined deployment)
CLIENT_URL=http://localhost:5173
